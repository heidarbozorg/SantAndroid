<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="edtUserName">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#90192d</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TopTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Date">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#336699</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">right|center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleNameItem">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right|center</item>
    </style>

    <style name="DescribtionItem">
        <item name="android:gravity">right|center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/Gray3</item>
    </style>


    <style name="spinnereciver" parent="Base.TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:padding">1dp</item>
        <item name="android:dropDownWidth">450dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:dropDownHeight">70dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>


    <style name="TitleDarkhastInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">right|center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FillDarkhastInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TitleUnder">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="button_sabt" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_hozor" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
