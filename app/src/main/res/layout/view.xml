<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Gray2" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/Gray2"
            android:orientation="vertical" >

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/action_bar" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/darkhast_info" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray2"
                android:orientation="horizontal"
                android:padding="12dp" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray2"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:weightSum="4.5" >

                <ImageView
                    android:id="@+id/imgGPS"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@drawable/gps2" />

                <ImageView
                    android:id="@+id/imgTajhizNotExists"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@drawable/raftam_nabod" />

                <ImageView
                    android:id="@+id/imgForward"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@drawable/eghdam_erja" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray2"
                android:orientation="horizontal"
                android:padding="10dp" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray2"
                android:orientation="horizontal"
                android:padding="20dp"
                android:weightSum="8" >

                <ProgressBar
                    android:id="@+id/progressbar1"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="7"
                    android:indeterminate="false" />

                <TextView
                    android:id="@+id/tvProgressDarsadValue"
                    style="@style/DescribtionItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/navigashon_menu" />

</android.support.v4.widget.DrawerLayout>